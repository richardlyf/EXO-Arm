<?xml version="1.0"?>
<robot name="visual">
	<material name="blue">
		<color rgba="0 0 0.8 1"/>
	</material>
	<material name="black">
		<color rgba="0 0 0 1"/>
	</material>
	<material name="white">
		<color rgba="1 1 1 1"/>
	</material>

	<link name="base_link">
		<visual>
			<geometry>
				<box size = "0.1 0.2 0.6"/>
			</geometry>
			<origin xyz = "0 0 1"/>
			<material name="white"/>
		</visual>
	</link>
	
	<link name="forearm">
		<visual>
			<geometry>
				<box size = "0.1 0.2 0.4"/>
			</geometry>
			<origin rpy = "0 0 0" xyz = "0 0 -0.15"/>
			<material name = "blue"/>
		</visual>
	</link>

	<joint name="base_to_forearm" type ="revolute">
		<axis xyz = "1 0 0"/>
		<limit effort = "1000.0" lower="0.0" upper="2" velocity = "0.5"/>
		<parent link="base_link"/>
		<child link="forearm"/>
		<origin rpy="0 0 0" xyz = "0.1 0 0.75"/>
	</joint>

</robot>
